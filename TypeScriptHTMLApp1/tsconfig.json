{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outDir": "scripts/app",
    "module": "amd",
    "moduleResolution": "Classic"
  },
  "include": [
    "scripts/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
